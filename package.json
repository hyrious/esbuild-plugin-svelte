{
  "name": "@hyrious/esbuild-plugin-svelte",
  "version": "0.1.6",
  "description": "Load .svelte files in esbuild.",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "npm run build-cjs && npm run build-esm",
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node14 --format=cjs --outfile=dist/index.js --sourcemap --external:esbuild --external:svelte",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --target=node14 --format=esm --outfile=dist/index.mjs --sourcemap --external:esbuild --external:svelte",
    "test": "c8 --include=src esbuild-dev --no-warnings --loader src/index.test.ts"
  },
  "repository": "hyrious/esbuild-plugin-svelte",
  "keywords": [
    "esbuild",
    "svelte"
  ],
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "peerDependencies": {
    "esbuild": "*",
    "svelte": "*"
  },
  "devDependencies": {
    "@hyrious/esbuild-dev": "^0.7.5",
    "@types/node": "^17.0.25",
    "c8": "^7.11.2",
    "esbuild": "^0.14.37",
    "sourcemap-validator": "^2.1.0",
    "svelte": "^3.47.0",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=14"
  }
}
