{
  "name": "@hyrious/esbuild-plugin-svelte",
  "type": "module",
  "version": "0.2.3",
  "description": "Load .svelte files in esbuild.",
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "repository": "hyrious/esbuild-plugin-svelte",
  "keywords": [
    "esbuild",
    "svelte"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --packages=external --outdir=dist && dts -p",
    "test": "esbuild-dev src/index.test.ts"
  },
  "peerDependencies": {
    "esbuild": ">=0.18",
    "svelte": ">=5"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25"
  },
  "devDependencies": {
    "@hyrious/configs": "^0.1.3",
    "@hyrious/dts": "^0.2.10",
    "@hyrious/esbuild-dev": "^0.10.11",
    "@types/node": "^22.8.1",
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "svelte": "^5.1.3"
  }
}
